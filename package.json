    "@tailwindcss/vite": "4.1.16",
    "@types/node": "24.9.2",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "@vitest/ui": "4.0.5",
    "prettier": "3.6.2",
    "prettier-plugin-organize-imports": "4.3.0",
    "prettier-plugin-tailwindcss": "0.7.1",
    "tailwindcss": "4.1.16",
    "tailwindcss-animate": "1.0.7",
    "typescript": "5.9.3",
    "vite": "7.1.12",
