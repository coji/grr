{
  "name": "grr",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "react-router build",
    "deploy": "pnpm run build && wrangler deploy",
    "db:migrate:remote": "wrangler d1 migrations apply grr-db --remote",
    "db:migrate:local": "wrangler d1 migrations apply grr-db --local",
    "dev": "react-router dev",
    "preview": "pnpm run build && vite preview",
    "test": "vitest",
    "test:unit": "vitest --config vitest.config.ts",
    "test:integration": "vitest --config vitest.integration.config.ts",
    "test:all": "pnpm test:unit && pnpm test:integration",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "typecheck": "pnpm wrangler types && react-router typegen && tsc -b",
    "lint": "biome lint .",
    "format": "prettier --check --experimental-cli .",
    "format:fix": "prettier --write --experimental-cli .",
    "validate": "pnpm run typecheck && pnpm run lint && pnpm run format"
  },
  "dependencies": {
    "@ai-sdk/google": "2.0.49",
    "@radix-ui/react-select": "2.2.6",
    "@radix-ui/react-slot": "1.2.4",
    "@react-router/remix-routes-option-adapter": "7.11.0",
    "ai": "5.0.115",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "dayjs": "1.11.19",
    "isbot": "5.1.32",
    "kysely": "0.28.9",
    "kysely-d1": "0.4.0",
    "lucide-react": "0.562.0",
    "nanoid": "5.1.6",
    "neverthrow": "8.2.0",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-router": "7.11.0",
    "react-twc": "1.5.1",
    "remix-flat-routes": "0.8.5",
    "slack-cloudflare-workers": "1.3.7",
    "slack-edge": "1.3.12",
    "tailwind-merge": "3.4.0",
    "ts-pattern": "5.9.0",
    "zod": "4.2.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@cloudflare/vite-plugin": "1.19.0",
    "@cloudflare/vitest-pool-workers": "0.11.1",
    "@react-router/dev": "7.11.0",
    "@tailwindcss/vite": "4.1.18",
    "@types/node": "25.0.3",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "@vitest/ui": "^4.0.16",
    "msw": "2.12.4",
    "prettier": "3.7.4",
    "prettier-plugin-organize-imports": "4.3.0",
    "prettier-plugin-tailwindcss": "0.7.2",
    "tailwindcss": "4.1.18",
    "tailwindcss-animate": "1.0.7",
    "typescript": "5.9.3",
    "vite": "7.3.0",
    "vite-tsconfig-paths": "6.0.3",
    "vitest": "^4.0.16",
    "wrangler": "4.56.0"
  },
  "packageManager": "pnpm@10.10.0"
}
