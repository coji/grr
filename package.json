{
  "name": "grr",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "react-router build",
    "deploy": "pnpm run build && wrangler deploy",
    "db:migrate:remote": "wrangler d1 migrations apply grr-db --remote",
    "db:migrate:local": "wrangler d1 migrations apply grr-db --local",
    "dev": "react-router dev",
    "preview": "pnpm run build && vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "typecheck": "pnpm wrangler types && react-router typegen && tsc -b",
    "lint": "biome lint .",
    "format": "prettier --check --experimental-cli .",
    "format:fix": "prettier --write --experimental-cli .",
    "validate": "pnpm run typecheck && pnpm run lint && pnpm run format"
  },
  "dependencies": {
    "@ai-sdk/google": "2.0.25",
    "@radix-ui/react-select": "2.2.6",
    "@radix-ui/react-slot": "1.2.3",
    "@react-router/remix-routes-option-adapter": "7.9.5",
    "ai": "5.0.82",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "dayjs": "1.11.18",
    "isbot": "5.1.31",
    "kysely": "0.28.8",
    "kysely-d1": "0.4.0",
    "lucide-react": "0.548.0",
    "nanoid": "5.1.6",
    "neverthrow": "8.2.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-router": "7.9.5",
    "react-twc": "1.5.1",
    "remix-flat-routes": "0.8.5",
    "slack-cloudflare-workers": "1.3.7",
    "slack-edge": "1.3.12",
    "tailwind-merge": "3.3.1",
    "ts-pattern": "5.9.0",
    "zod": "4.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.2",
    "@cloudflare/vite-plugin": "1.13.17",
