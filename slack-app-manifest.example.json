{
  "display_information": {
    "name": "ほたる日記",
    "description": "21時に灯るほたると一緒に、その日の気分をそっと記録できる日記アプリ",
    "background_color": "#fbbf24",
    "long_description": "Slackで21時になると日記灯の妖精・ほたるがそっと現れて、きょうの気分を顔文字リアクションで残すお手伝いをしてくれます。スレッドに日記の詳細を書けば、たまに絵文字で寄り添い、メンションすれば優しく応えてくれる心の相棒です。"
  },
  "features": {
    "bot_user": {
      "display_name": "ほたる",
      "always_online": true
    },
    "shortcuts": [
      {
        "name": "日記をつける",
        "type": "message",
        "callback_id": "grr_shortcut",
        "description": "メッセージから今日の気分日記を残す"
      }
    ],
    "slash_commands": [
      {
        "command": "/grr",
        "url": "https://example.com/webhook/slack",
        "description": "日記を開く",
        "usage_hint": "今日のきもち",
        "should_escape": false
      }
    ]
  },
  "oauth_config": {
    "scopes": {
      "bot": [
        "app_mentions:read",
        "commands",
        "users:read",
        "chat:write",
        "reactions:read",
        "reactions:write",
        "im:write",
        "im:history"
      ]
    }
  },
  "settings": {
    "event_subscriptions": {
      "request_url": "https://example.com/webhook/slack",
      "bot_events": ["app_mention", "reaction_added", "reaction_removed", "message.im"]
    },
    "interactivity": {
      "is_enabled": true,
      "request_url": "https://example.com/webhook/slack"
    },
    "org_deploy_enabled": false,
    "socket_mode_enabled": false,
    "token_rotation_enabled": false
  }
}
