{
  "$schema": "https://biomejs.dev/schemas/2.3.2/schema.json",
  "assist": { "actions": { "source": { "organizeImports": "off" } } },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "includes": ["**", "!app/app.css"]
  },
  "linter": {
    "enabled": true,
    "includes": ["**", "!**/worker-configuration.d.ts"],
    "rules": {
      "recommended": true
    }
  }
}
